<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <data>
        <import type="android.view.View"/>

        <variable
            name="indicator"
            type="String" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />
        <variable
            name="itemClick"
            type="com.example.github.newsproject.base.`OnItemClickListener.java`" />

        <variable
            name="itemLongClick"
            type="com.example.github.newsproject.base.OnItemLongClickListener"/>
        <variable
            name="refreshColor"
            type="Boolean" />
        <variable
            name="errorStatus"
            type="Boolean" />
        <variable
            name="loadingStatus"
            type="Boolean" />
        <variable
            name="refreshing"
            type="Boolean" />
        <variable
            name="emptyStatus"
            type="Boolean" />
        <variable
            name="errorReload"
            type="com.example.github.newsproject.widget.ErrorReload" />
        <variable
            name="gesture"
            type="com.example.github.newsproject.base.DoubleClickListener" />
        <variable
            name="refreshListener"
            type="androidx.swiperefreshlayout.widget.SwipeRefreshLayout.OnRefreshListener" />

    </data>



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:refreshColor ="@{refreshColor}"
        bind:rereshListener = "@{refreshListener}"
        bind:refreshState="@{refreshing}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/page_out_background">

            <TextView
                android:id="@+id/project_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home_title_bg"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="12dp"
                android:singleLine="true"
                android:text="@{indicator}"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                bind:gesture="@{gesture}"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/article_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scrollbarThumbVertical="@drawable/custom_scroll_bar"
                android:scrollbars="vertical"
                android:visibility="@{errorStatus||loadingStatus||emptyStatus?View.GONE :View.VISIBLE}"
                app:layoutManager ="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf= "@id/project_type"
                bind:adapter="@{adapter}"
                bind:hasFixedSize="@{true}"
                bind:pageItemClick="@{itemClick}"
                bind:pageItemLongClidk="@{itemLongClick}"
                tools:itemCount="20"
                tools:listitem="@layout/recycler_home_article"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</layout>